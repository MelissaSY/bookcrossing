<!DOCTYPE html>
<html>
<head>
    <title>Authors</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
<div class="all-content">
    <%- include('partials/navigation') %>
    <div class="content">
    <h1>Authors</h1>
    <div>
        <form action="/authors" method="get">
            <select name="sorting" id="sorting">
                <%if(sorting){%>
                <option value="<%=sorting%>" selected hidden>By <%=sorting%></option>
                <%}%>
                <option value="default">By default</option>
                <option value="id">By id</option>
                <option value="name">By name</option>
                <option value="surname">By surname</option>
                <option value="pseudonym">By pseudonym</option>
            </select>
            <select name="filter" id="filter">
                <%if(filter){%>
                <option value="<%=filter%>" selected hidden><%=filter%></option>
                <%}%>
                <option value="all">all</option>
                <option value="name">name</option>
                <option value="surname">surname</option>
                <option value="pseudonym">pseudonym</option>
            </select>
            <input type="search" name="search_query" placeholder="Search author" value="<%=searched%>">
            <input type="submit" value="Search">
        </form>
    </div>
    <form action="/authors/add" method="get">
        <button type="submit" id="add_author">Add</button>
    </form>
        <ul class="author_list">
            <% authors.forEach(function(author) { %>
                <li class="author_element">
                    <%- include('partials/author', {author:author}); %>
                </li>
            <%}) %>
        </ul>
    </div>
</div>

</body>
<html>